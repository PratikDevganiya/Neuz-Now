<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>Document</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Neuz-Now</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0" id="ul">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/" id="home"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" id="int" href="/category/international"
                >International</a
              >
            </li>
          </ul>
          <% if(locals.login) { %>
          <div class="mx-1">
            <a class="btn btn-primary" href="/logout" role="button">Logout</a>
          </div>
          <% } else { %>
          <div class="mx-1">
            <a class="btn btn-primary" href="/login" role="button">Login</a>
          </div>
          <div class="mx-1">
            <a class="btn btn-primary" href="/loginadmin" role="button">Login For Admin</a>
          </div>
          <div class="mx-1">
            <a class="btn btn-primary" href="/signup" role="button">Sign Up</a>
          </div>
          <% } %>
        </div>
      </div> 
    </nav>

    <script>
      const navElem = document.getElementsByClassName("nav-link");
      const navbar = document.getElementById("navbarSupportedContent");
      navbar.addEventListener("click", (e) => {
        // e.preventDefault();
        if (e.target.classList.contains("nav-link")) {
          Array.from(navElem).forEach((element) => {
            element.classList.remove("active");
          });
          e.target.classList.add("active");
        }
      });
    </script>
  </body>
</html>
